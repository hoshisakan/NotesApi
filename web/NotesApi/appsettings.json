{
    "ConnectionStrings": {
        // 正式佈署測試需要以 docker PostgreSQL IP Address + docker PostgreSQL 對外埠號才能夠連線到 Database
        "DefaultConnection": "Host=postgres_db;Port=5432;Database=notesdb_dev;Username=root;Password=Shirushi398610"
        // 本地測試需要以 Wi-Fi Ipv4 Address + docker PostgreSQL 對外埠號才能夠連線到 Database
        // "DefaultConnection": "Host=172.20.10.9;Port=5433;Database=notesdb_dev;Username=root;Password=Shirushi398610"
        // "DefaultConnection": "Host=172.20.10.9;Port=5433;Database=notesdb_test;Username=root;Password=Shirushi398610"
    },
    "PostgreSQLConfigure": {
        "Schema": "local"
    },
    "Jwt": {
        "Key": "ThisIsASecretKeyForJwtToken123456!",
        "Issuer": "JwtPostgresApi",
        "Audience": "JwtPostgresApiUser",
        "ExpireMinutes": 60
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    // "path": "/var/log/backend/log-.txt",
                    "path": "./Logs/log-.txt",
                    "rollingInterval": "Hour",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [
            "FromLogContext"
        ]
    }
}